#include<bits/stdc++.h>
using namespace std;

void Solve()
{
        int n,k;
        cin>>n>>k;
        string s;
        cin>>s;
        int cnt=0;
        for(int i=0;i<k;i++)
        {
            if(s[i]=='W')cnt++;
        }
        int ans=cnt;
        for(int i=k;i<n;i++)
        {
            if(s[i]=='W')cnt++;
            if(s[i-k]=='W')cnt--;
            ans=min(ans,cnt);
        }
        cout<<ans<<endl;


}

int32_t main()
{
    int t;
    cin>>t;
    while(t--)
        Solve();
}

